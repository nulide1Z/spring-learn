<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	         http://www.springframework.org/schema/beans/spring-beans.xsd
		 http://www.springframework.org/schema/context">

    <bean id="apple" class="cn.wyw.springframework.beans.aop.Apple">
        <property name="pear"  ref="pear"/>
    </bean>
    <bean id="pear"  class="cn.wyw.springframework.beans.aop.Pear">
        <property name="apple"  ref="apple"/>
        <property name="fruit"  ref="fruit"/>
    </bean>

    <bean id="fruit" class="cn.wyw.springframework.beans.aop.FruitFactory"/>


    <bean id="defaultAdvisorAutoProxyCreator" class="cn.wyw.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"/>

    <bean id="beforeAdvice" class="cn.wyw.springframework.beans.aop.FruitAdvice"/>
    <bean id="methodBeforeAdviseInterceptor" class="cn.wyw.springframework.aop.framework.adapter.MethodBeforeAdviseInterceptor">
        <property name="advice" ref="beforeAdvice"/>
    </bean>
    <bean id="pointcutAdvisor" class="cn.wyw.springframework.aop.aspectj.AspectJExpressionPointcutAdvisor">
        <property name="expression" value="execution(* cn.wyw.springframework.beans.aop.Fruit.*(..))"/>
        <property name="advice" ref="methodBeforeAdviseInterceptor"/>
    </bean>

</beans>
